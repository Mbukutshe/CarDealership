<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_videos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingLeft="0dp"
    card_view:contentPaddingRight="0dp"
    card_view:contentPaddingTop="0dp"
    card_view:contentPaddingBottom="0dp"
    card_view:theme="@style/AlertDialog.AppCompat">
    <LinearLayout
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_layout_message"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/carplaceholder"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
                <LinearLayout
                    android:id="@+id/video_footer_layout"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/textview_price_corners"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/video_duration_layout"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/video_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12pt"
                            android:text="R350 000"
                            android:textColor="#fff"/>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EAEAEA">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title_message"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/subject_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_alignParentLeft="true"
                        android:text="BMW 520i A"
                        android:layout_weight="2"
                        android:textSize="10pt"
                        android:textAppearance="@style/Subject"
                        />
                    <TextView
                        android:id="@+id/message_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Alpine White,2016,7500km,M Sport Package,Xenons,19 wheels, Sunroof,PDC"
                        android:textColor="@color/menuColor"
                        android:textSize="7pt"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/author_layout_message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/message_layout_message">
            <TextView
                android:id="@+id/urgent_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/info_text_message"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/messageid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/urgent_text"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>